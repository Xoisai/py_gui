
# - - - - - - - - Project Browser - - - - - - - -

# New project popup form
<NewProjectPopup>:
    auto_dismiss: True
    size_hint: 0.5, 0.25
    pos_hint: {"x": 0.25, "y": 0.4}
    title: "New Project"
    project_name: project_name_input.text

    BoxLayout:
        size: root.size
        padding: 10
        spacing: 20
        orientation: "vertical"
        TextInput:
            id: project_name_input
            halign: "center"
            valign: "middle"
            size_hint: 1.0, 0.1
            multiline: False
            hint_text: "Project Name"
            on_text: root.validate_p_name(self.text)

        Button:
            id: add_p_btn
            size_hint: 1.0, 0.1
            text: "Add Project"
            on_release: root.enter()

<ProjectBrowserPage>:
    StandardPage:
        size: root.width, root.height

        PageTitle:
            text: "Project Browser"


        Button:
            pos_hint: {"x": 0.8, "y": 0.8}
            size_hint: 0.15, 0.05
            text: "Add Project"
            on_release: root.add_project()

        Button:
            pos_hint: {"x": 0.6, "y": 0.8}
            size_hint: 0.15, 0.05
            text: "Project Settings"
            on_release: 33

        ScrollView:
            size_hint: 0.9, 0.7
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            do_scroll_x: False
            do_scroll_y: True
            canvas.before:
                Color:
                    rgba: layout_background
                Rectangle:
                    pos: self.pos
                    size: self.size

            GridLayout:
                id: project_grid
                size_hint_y: None
                height: self.minimum_height
                row_default_height: 60
                spacing: 20
                padding: 20
                cols: 1

# - - - - - - - - Project View - - - - - - - -

<ProjectViewPage>:

    StandardPage:
        size: root.width, root.height

        PageTitle:
            id: page_title

        ScrollView:
            size_hint: 0.8, 0.75
            pos_hint: {"center_x": 0.5, "center_y": 0.45}
            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                id: s_btn_grid
                cols: 4
                size_hint_y: None
                height: self.minimum_height
                row_default_height: 300
                spacing: 20
