
# - - - - - - - - Project Browser - - - - - - - -

# New project popup form
<NewProjectPopup>:
    auto_dismiss: True
    size_hint: 0.5, 0.25
    pos_hint: {"x": 0.25, "y": 0.4}
    title: "New Project"
    project_name: project_name_input.text

    BoxLayout:
        size: root.size
        padding: 10
        spacing: 20
        orientation: "vertical"
        TextInput:
            id: project_name_input
            halign: "center"
            valign: "middle"
            size_hint: 1.0, 0.1
            multiline: False
            hint_text: "Project Name"

        Button:
            size_hint: 1.0, 0.1
            text: "Add Project"
            on_release: root.enter()

<ProjectBrowserPage>:
    FloatLayout:
        size: root.width, root.height

        NavPane:
            NavGrid:
                HomeBtn:
                    on_release: root.home_btn()
                BackBtn:
                    on_release: root.back_btn()

        ScrollView:
            size_hint: 0.6, 0.5
            pos_hint: {"x": 0.2, "y": 0.25}
            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                id: p_btn_grid
                size_hint_y: None
                height: self.minimum_height
                row_default_height: 60
                spacing: 20
                cols: 1

        Button:
            pos_hint: {"x": 0.45, "y": 0.1}
            size_hint: 0.15, 0.1
            text: "Add Project"
            on_release: root.add_project()

        Label:
            # pos_hint: {"x":0.1, "y": 0.8}
            text: "PROJECT BROWSER PAGE"

# - - - - - - - - Project View - - - - - - - -

<ProjectViewPage>:
    FloatLayout:
        size: root.width, root.height

        Label:
            # pos_hint: {"x":0.1, "y": 0.8}
            text: "PROJECT VIEW PAGE"
