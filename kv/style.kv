# Variables
#:set grid_padding [20, 20]
#:set grid_spacing 20
#:set layout_background (0.17, 0.17, 0.17, 1)

<Button>:
    font_size: 20
    color: 0.1, 0.5, 0.6, 1
    size_hint: 0.2, 0.25

<SymbolButton@Button>:
    text_size: root.width, root.height
    font_size: 25
    color: 0.1, 0.5, 0.6, 1
    size_hint: 0.2, 0.25
    valign: "bottom"
    halign: "center"
    padding: 20, 20

<ThumbnailButton>:
    text_size: root.width, root.height
    font_size: 40
    color: 0.1, 0.5, 0.6, 1
    size_hint: 0.2, 1.0
    valign: "bottom"
    halign: "center"
    padding: 20, 20

    Image:
        id: thumb_img
        center_x: self.parent.center_x
        center_y: self.parent.center_y

<ButtonHtlImg>:
    cols: 2
    size_hint: 0.1, 0.08
    spacing: 20
    padding: 20

    canvas.before:
        Color:
            rgb: layout_background if self.state == "normal" else (0.1, 0.5, 0.6, 1)
        Rectangle:
            pos: self.pos
            size: self.size
