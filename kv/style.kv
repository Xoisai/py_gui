# Variables
#:set grid_padding [20, 20]
#:set grid_spacing 20
#:set layout_background (0.1, 0.1, 0.1, 1)

<Button>:
    font_size: 40
    color: 0.1, 0.5, 0.6, 1
    size_hint: 0.2, 0.25

<SymbolButton@Button>:
    text_size: root.width, root.height
    font_size: 40
    color: 0.1, 0.5, 0.6, 1
    size_hint: 0.2, 0.25
    valign: "bottom"
    halign: "center"
    padding: 20, 20
