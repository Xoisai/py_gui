#:import SlideTransition kivy.uix.screenmanager.SlideTransition

# Navigation
<NavBar>:
    FloatLayout:
        size_hint: 0.1, 1.0

        GridLayout:
            size_hint: 1.0, 0.6
            pos_hint: {"y": 0.2}
            spacing: [20, 20]
            padding: 20
            cols: 1

            Button:
                text: "Home"
                source: "outline_home_white_48dp.png"
                on_release:
                    app.root.transition = SlideTransition(direction="right")
                    root.parent.home_btn()
                    app.root.transition = SlideTransition(direction="left")

            Button:
                text: "Back"
                on_release:
                    app.root.transition = SlideTransition(direction="right")
                    root.parent.back_btn()
                    app.root.transition = SlideTransition(direction="left")
