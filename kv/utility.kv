#:import SlideTransition kivy.uix.screenmanager.SlideTransition

# Standard page float layout to account for navbar
<StandardPage@RelativeLayout>:
    size_hint: 0.9, 1.0
    pos_hint: {"x": 0.1}

# Page Title
<PageTitle@Label>:
    font_size: 60
    halign: "center"
    valign: "middle"
    size_hint: 0.8, 0.1
    pos_hint: {"center_x": 0.5, "center_y": 0.9}

# Navigation
<NavBar>:
    FloatLayout:
        size_hint: 0.1, 1.0
        canvas.before:
            Color:
                rgba: layout_background
            Rectangle:
                pos: self.pos
                size: self.size


        GridLayout:
            size_hint: 1.0, 0.6
            pos_hint: {"center_y": 0.5}
            spacing: grid_spacing
            padding: grid_padding
            cols: 1

            Button:
                size_hint: 1.0, 0.15
                on_release:
                    app.root.transition.direction = "right"
                    root.parent.home_btn()
                Image:
                    source: "static/icons/outline_home_white_48dp.png"
                    size: 60, 60
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            Button:
                size_hint: 1.0, 0.15
                on_release:
                    app.root.transition.direction = "right"
                    root.parent.back_btn()
                Image:
                    source: "static/icons/outline_arrow_back_white_48dp.png"
                    size: 60, 60
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

<ProjectLine>:
    cols: 4
    size_hint: (1, 0.1)
    # padding: 20
    spacing: 20
    canvas.before:
        Color:
            rgb: layout_background if self.state == "normal" else (0.1, 0.5, 0.6, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    Image:
        source: "static/icons/baseline_folder_white_48dp.png"
        center_x: self.parent.center_x
        center_y: self.parent.center_y
        size_hint_x: 0.1

    Label:
        id: p_name
        shorten: True
        shorten_from: "right"
        text_size: self.size
        valign: "middle"


    Label:
        size_hint_x: 0.3
        id: c_date
        shorten: True
        shorten_from: "right"
        text_size: self.size
        valign: "middle"

    Label:
        size_hint_x: 0.2
        id: n_samples
        shorten: True
        shorten_from: "right"
        text_size: self.size
        valign: "middle"

<ProjectLineHeader>:
    cols: 4
    size_hint: (1, 0.1)
    canvas.after:
        Color:
            rgb: (1, 1, 1, 1)
        Line:
            width: 20
            points: self.x, self.x + self.width

    Image:
        size_hint_x: 0.1
        opacity: 0

    Label:
        text_size: self.size
        text: "Project"
        valign: "middle"

    Label:
        text_size: self.size
        size_hint_x: 0.3
        text: "Creation Date"
        valign: "middle"

    Label:
        text_size: self.size
        size_hint_x: 0.2
        text: "Samples"
        valign: "middle"
