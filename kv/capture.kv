<AnalysisPage>:
    StandardPage:

        RelativeLayout:
            size_hint: 0.6, 0.9
            pos_hint: {"center_x": 0.35, "center_y": 0.5}

            Image:
                id: sample_img
                canvas.before:
                    Color:
                        rgba: layout_background
                    Rectangle:
                        pos: self.pos
                        size: self.size

            # Hotswap button for changing between standard and IR images
            Button:
                size_hint: 0.1, 0.1
                pos_hint: {"center_x": 0.95, "center_y": 0.05}
                background_normal: ''
                background_color: layout_background

                on_release:
                    root.hotswap_pic_btn()

                Image:
                    source: "static/icons/baseline_autorenew_white_48dp.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

        RelativeLayout:
            size_hint: 0.3, 0.7
            pos_hint: {"x": 0.675, "y": 0.25}
            canvas.before:
                Color:
                    rgba: layout_background
                Rectangle:
                    pos: 0, 0
                    size: self.size

            Label:
                text: "SAMPLE ANALYSIS STATISTICS"

        RelativeLayout:
            size_hint: 0.3, 0.175
            pos_hint: {"x": 0.675, "y": 0.05}
            canvas.before:
                Color:
                    rgba: layout_background
                Rectangle:
                    pos: 0, 0
                    size: self.size

            GridLayout:
                spacing: grid_spacing
                padding: grid_padding
                cols: 3

                SymbolButton:
                    font_size: 30
                    # text: "Analyse"
                    on_release: root.analyse_btn()
                    Image:
                        source: "static/icons/baseline_assessment_white_48dp.png"
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y

                SymbolButton:
                    font_size: 30
                    # text: "Save"
                    on_release:
                        root.save_btn()
                    Image:
                        source: "static/icons/baseline_save_white_48dp.png"
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y

                SymbolButton:
                    font_size: 30
                    # text: "Settings"
                    on_release:
                        # root.save_btn()
                    Image:
                        source: "static/icons/baseline_settings_white_48dp.png"
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y


# New project popup form
<AnalysisQuitPopup>:
    auto_dismiss: True
    size_hint: 0.5, 0.2
    pos_hint: {"x_center": 0.5, "y_center": 0.5}
    title: "The current sample data will be discarded. Would you like to save?"

    GridLayout:
        cols: 2

        Button:
            text: "Yes"
            on_release:
                app.root.transition.direction = "right"
                root.holder.save_btn(follow_action=root.btn_function)
                root.dismiss()

        Button:
            text: "No"
            on_release:
                # Dismiss popup and call function to delete imgs and exit
                app.root.transition.direction = "right"
                root.dismiss()
                root.enter()

# New project popup form
<SaveSampleProjectPopup>:
    auto_dismiss: True
    size_hint: 0.8, 0.8
    pos_hint: {"x_center": 0.5, "y_center": 0.5}
    title: "Select Project"

    RelativeLayout:
        # size_hint: 0.8, 0.8

        ProjectLineHeader:
            pos_hint: {"y": 0.875}

        ScrollView:
            size_hint_y: 0.875
            do_scroll_x: False
            do_scroll_y: True
            canvas.before:
                Color:
                    rgba: layout_background
                Rectangle:
                    pos: self.pos
                    size: self.size

            GridLayout:
                id: project_grid
                size_hint_y: None
                height: self.minimum_height
                row_default_height: 60
                spacing: 20
                padding: 20
                cols: 1

<SaveSampleNamePopup>:
    sample_name_input: sample_name_input
    size_hint: 0.8, 0.8

    RelativeLayout:

        BoxLayout:
            pos_hint: {"center_x": 0.5, "center_y": 0.9}
            size_hint: 0.95, 0.07
            spacing: grid_spacing
            orientation: "horizontal"

            Button:
                size_hint: 0.2, 1
                text: "Back"
                on_release: root.dismiss()

            TextInput:
                size_hint: 0.6, 1
                id: sample_name_input
                halign: "center"
                valign: "middle"
                multiline: False
                hint_text: "Sample Name"
                on_text: root.on_s_name_text(self.text)

            Button:
                id: save_s_btn
                size_hint: 0.2, 1
                text: "Save"
                on_release: root.save_btn()

        ScrollView:
            size_hint: 0.95, 0.8
            pos_hint: {"center_x": 0.5, "center_y": 0.425}
            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                id: s_btn_grid
                cols: 4
                size_hint_y: None
                height: self.minimum_height
                row_default_height: 300
                spacing: 20

<OverwriteSamplePopup>:
    size_hint: 0.4, 0.2

    GridLayout:
        cols: 2
        Button:
            text: "Yes"
            on_release: root.confirm_btn()
        Button:
            text: "No"
            on_release: root.dismiss()
