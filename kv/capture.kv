<NewCapPage>:
    StandardPage:

        # PageTitle:
        #     text: "New Capture"

        BoxLayout:
            size_hint: 0.6, 0.9
            pos_hint: {"center_x": 0.4, "center_y": 0.5}
            Button:
                size_hint: 1, 1
                text: "CAMERA VIEW"

        RelativeLayout:
            size_hint: 0.2, 1.0
            pos_hint: {"x": 0.8}
            canvas.before:
                Color:
                    rgba: layout_background
                Rectangle:
                    pos: 0, 0
                    size: self.size

            GridLayout:
                size_hint: 1.0, 0.6
                pos_hint: {"center_y": 0.5}
                spacing: grid_spacing
                padding: grid_padding
                cols: 1

                Button:
                    size_hint: 1.0, 0.15
                    on_release:
                        root.capture_btn()
                    Image:
                        source: "static/icons/baseline_camera_white_48dp.png"
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y

<AnalysisPage>:
    StandardPage:

        Image:
            id: sample_img
            size_hint: 0.6, 0.9
            pos_hint: {"center_x": 0.35, "center_y": 0.5}
            canvas.before:
                Color:
                    rgba: layout_background
                Rectangle:
                    pos: self.pos
                    size: self.size

        RelativeLayout:
            size_hint: 0.3, 0.6
            pos_hint: {"x": 0.675, "y": 0.35}
            canvas.before:
                Color:
                    rgba: layout_background
                Rectangle:
                    pos: 0, 0
                    size: self.size

            Label:
                text: "SAMPLE ANALYSIS STATISTICS"

        RelativeLayout:
            size_hint: 0.3, 0.25
            pos_hint: {"x": 0.675, "y": 0.05}
            canvas.before:
                Color:
                    rgba: layout_background
                Rectangle:
                    pos: 0, 0
                    size: self.size

            GridLayout:
                spacing: grid_spacing
                padding: grid_padding
                cols: 3

                SymbolButton:
                    text: "Analyse"
                    on_release: root.analyse_btn()
                    Image:
                        source: "static/icons/baseline_assessment_white_48dp.png"
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y

                SymbolButton:
                    text: "Save"
                    on_release: root.save_btn()
                    Image:
                        source: "static/icons/baseline_save_white_48dp.png"
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y

# New project popup form
<AnalysisQuitPopup>:
    auto_dismiss: True
    size_hint: 0.5, 0.25
    pos_hint: {"x_center": 0.5, "y_center": 0.5}
    title: "The current sample date will be deleted. Are you sure?"

    GridLayout:
        cols: 2

        Button:
            text: "Yes"
            on_release:
                app.root.transition = SlideTransition(direction="right")
                root.dismiss()
                root.enter()
                app.root.transition = SlideTransition(direction="left")

        Button:
            text: "No"
            on_release: root.dismiss()

# New project popup form
<SaveSamplePopup>:
    auto_dismiss: True
    size_hint: 0.5, 0.5
    pos_hint: {"x_center": 0.5, "y_center": 0.5}
    title: "Select Project"
    s_name: sample_name_input.text

    GridLayout:
        cols: 1
        padding: grid_padding
        spacing: grid_spacing

        TextInput:
            id: sample_name_input
            halign: "center"
            valign: "middle"
            size_hint: 1.0, 0.15
            multiline: False
            hint_text: "Sample Name"

        ScrollView:
            size_hint: 1.0, 0.9
            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                id: p_btn_grid_popup
                size_hint_y: None
                height: self.minimum_height
                row_default_height: 60
                spacing: 20
                cols: 1



