<NewCapPage>:
    StandardPage:

        # PageTitle:
        #     text: "New Capture"

        BoxLayout:
            size_hint: 0.6, 0.9
            pos_hint: {"center_x": 0.4, "center_y": 0.5}
            Button:
                size_hint: 1, 1
                text: "CAMERA VIEW"

        RelativeLayout:
            size_hint: 0.2, 1.0
            pos_hint: {"x": 0.8}
            canvas.before:
                Color:
                    rgba: layout_background
                Rectangle:
                    pos: 0, 0
                    size: self.size

            GridLayout:
                size_hint: 1.0, 0.6
                pos_hint: {"center_y": 0.5}
                spacing: grid_spacing
                padding: grid_padding
                cols: 1

                Button:
                    size_hint: 1.0, 0.15
                    on_release:
                        root.capture_btn()
                    Image:
                        source: "static/icons/baseline_camera_white_48dp.png"
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y

<AnalysisPage>:
    StandardPage:

        Image:
            id: sample_img
            size_hint: 0.6, 0.9
            pos_hint: {"center_x": 0.35, "center_y": 0.5}
            canvas.before:
                Color:
                    rgba: layout_background
                Rectangle:
                    pos: self.pos
                    size: self.size

        RelativeLayout:
            size_hint: 0.3, 0.3
            pos_hint: {"x": 0.675, "y": 0.5}
            canvas.before:
                Color:
                    rgba: layout_background
                Rectangle:
                    pos: 0, 0
                    size: self.size

            Label:
                text: "SAMPLE ANALYSIS STATISTICS"

        RelativeLayout:
            size_hint: 0.3, 0.3
            pos_hint: {"x": 0.675, "y": 0.15}
            canvas.before:
                Color:
                    rgba: layout_background
                Rectangle:
                    pos: 0, 0
                    size: self.size

            GridLayout:
                spacing: grid_spacing
                padding: grid_padding
                cols: 2

                SymbolButton:
                    text: "Analyse"
                    on_release: root.analyse_btn()
                    Image:
                        source: "static/icons/baseline_assessment_white_48dp.png"
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y

                SymbolButton:
                    text: "Recapture"
                    on_release: root.back_btn()
                    Image:
                        source: "static/icons/baseline_autorenew_white_48dp.png"
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
