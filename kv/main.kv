<HomePage>:
    FloatLayout:
        size: root.width, root.height

        PageTitle:
            text: "Homepage"

        GridLayout:
            pos_hint: {"x": 0.2, "y": 0.35}
            size_hint: 0.6, 0.3
            spacing: grid_spacing
            cols: 3
            SymbolButton:
                text: "New Capture"
                on_release:
                    app.root.transition.direction = "left"
                    root.new_cap_btn()
                Image:
                    source: "static/icons/baseline_camera_alt_white_48dp.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            SymbolButton:
                text: "Project Browser"
                on_release:
                    app.root.transition.direction = "left"
                    root.p_browse_btn()
                Image:
                    source: "static/icons/baseline_inventory_white_48dp.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            SymbolButton:
                text: "Settings"
                on_release:
                    app.root.transition.direction = "left"
                    root.settings_btn()
                Image:
                    source: "static/icons/baseline_settings_white_48dp.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y



<SettingsPage>:
    FloatLayout:
        size: root.width, root.height

        Label:
            text: "SETTINGS PAGE"
