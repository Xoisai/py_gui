<HomePage>:
    FloatLayout:
        size: root.width, root.height

        PageTitle:
            text: "Homepage"

        GridLayout:
            pos_hint: {"x": 0.2, "y": 0.35}
            size_hint: 0.6, 0.3
            spacing: [20, 20]
            cols: 3
            Button:
                text: "New Capture"
                on_release: root.new_cap_btn()

            Button:
                text: "Project Browser"
                on_release: root.p_browse_btn()

            Button:
                text: "Settings"
                on_release: root.settings_btn()


<SettingsPage>:
    FloatLayout:
        size: root.width, root.height

        Label:
            text: "SETTINGS PAGE"
